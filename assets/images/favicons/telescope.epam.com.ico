			errorText.innerHTML = localization()[['IncorrectUser']];
	}
}

var applyAttentionMessage = function () {

	var logo = document.getElementById("companyLogo");
	if (logo){
		// initialize UI elements
		var container = document.createElement("div");
		container.id = 'attention'

		var message = document.createElement("div");
		message.id = 'message'
		message.innerHTML = localization()[['attention-message']];

		// insert elements after logo
		logo.parentNode.insertBefore(container, logo.nextSibling);
		container.appendChild(message);
	}
}

var stylizeSignoutPage = function(){

	// applications list for sign-our re-login functionality
	var knownApplications = [
		{appId: "crm", appName: "EPAM CRM", referrer: "https://crm.epam.com", href: "https://crm.epam.com"}
	];	
	
	// handle sign out page
	var isSignOutPage = (document.URL.toLowerCase().indexOf("wa=wsignout1.0") != -1);
	if (isSignOutPage){
		// parse referrer 
		
		// handle redirect to sign out page
		var referrer = document.referrer;
		if (referrer != null && referrer.length > 0) {
			referrer = referrer.toLowerCase();
			for (var i = 0; i < knownApplications.length; i++) {
				var app = knownApplications[i];
				if (referrer.indexOf(app.referrer.toLowerCase()) != -1){
					document.location.hash = "#signout_appid=" + app.appId;
					break;
				}
			}
		}

		// fix sign out error message
		var msg = document.getElementById("errorMessage");
		if (msg){
			msg.innerText = localization()[["signOutErrorMessage"]]
			// hide error url if any
			var errLink = document.getElementById("errorDetailsLink");
			if (errLink){
				errLink.style.display="none";
			}
			// update error header text
			var errHeader = msg.previousElementSibling;
			if (errHeader){
				errHeader.innerText = localization()[["errHeader"]]
			}
		} 
		
		// handler appid from document.location.hash
		if (document.location.hash != null && document.location.hash.length > 0){
			var parts = /.*signout_appid=(\w*).*/.exec(document.location.hash);
			if (parts && parts.length >= 2) {
				var appId = parts[1];
				// found sign out application, adding link for re-login
				for (var i = 0; i < knownApplications.length; i++) {
					var app = knownApplications[i];
					if (appId ==  app.appId){
						// if no error message, find instruction container
						if (!msg){
							msg = document.getElementById("instruction");
						}
						// if message container found, fill it with re-login link
						if (msg) {
							// newline
							msg.appendChild(document.createElement("br"));
							// Login
							var it = document.createElement("span");
							it.innerText = localization()[["YouCanLogin"]];
							msg.appendChild(it);
							// Application
							var it = document.createElement("a");
							it.innerText = app.appName;
							it.href = app.href;
							msg.appendChild(it);
							// Again
							var it = document.createElement("span");
							it.innerText = localization()[["Again"]];
							msg.appendChild(it);
						}
						break;
					}
				}
			}
		}
	}
};

function saveUN() {
    if (document.getElementById('userNameInput')) {
        var un = document.getElementById('userNameInput').value;
        var unc = b64EncodeUnicode(un);
        window.localStorage.setItem("UN", unc);
    }
}

function loadUN() {
    var unc = window.localStorage.getItem("UN");
    if (unc && unc !== "undefined") {
        var un = b64DecodeUnicode(unc);
        if (isEmail(un) && document.getElementById('userNameInput') && document.getElementById("passwordInput")) {
            document.getElementById('userNameInput').value = un;
            document.getElementById("passwordInput").focus();
        }
    }
}

function isEmail(inputText) {
    var mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
    return mailformat.test(inputText);
}

var initScript = function () {
    var l10nScript = document.createElement("script");
    l10nScript.type = 'text/javascript'
    l10nScript.src = "/adfs/portal/script/l10n.js";
    document.getElementsByTagName('head')[0].appendChild(l10nScript);

    var base64script = document.createElement("script");
    base64script.type = 'text/javascript'
    base64script.src = "/adfs/portal/script/base64.js";
    document.getElementsByTagName('head')[0].appendChild(base64script);
}

var localization = function () {
    var localeByDefault = 'en';
    var locale = navigator.language || navigator.browserLanguage || "en-EN";
    locale = locale.split('-')[0];
    var localeDictionary = l10n[locale] === undefined ? l10n[localeByDefault] : l10n[locale];

    return localeDictionary;
}

function LoginErrors() {
    this.userNameFormatError = localization()[['UserNameFormatError']];
    this.passwordEmpty = localization()[['PasswordEmpty']];
    this.passwordTooLong = localization()[['PasswordTooLong']];
}

initScript();

window.onload = function()
{
    loadUN();
    if (window.addEventListener && document.getElementById('submitButton')) {
        document.getElementById('submitButton').addEventListener('click', saveUN);
    } else if (window.attachEvent && document.getElementById('submitButton')) {
        document.getElementById('submitButton').attachEvent('onclick', saveUN);
